{% extends 'gestionProd/baseback1.html.twig' %}

{% block body %}
    <div class="container">
        <div class="card-header">
            <h1 class="title">Ajouter une nouvelle catégorie</h1>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            
            <div class="form-group mb-3">
                {{ form_label(form.categorie_prod, 'Nom du catégorie :', {'label_attr': {'class': 'titlep'}}) }}
                {{ form_widget(form.categorie_prod, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button type="submit" class="btn btn-success mb-0.9">Enregistrer</button>
            <a href="{{ path('app_categorie_prod_index') }}" class="btn btn-secondary">Back to list</a>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

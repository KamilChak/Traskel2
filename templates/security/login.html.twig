{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
  <div class="container-fluid h-100" style="padding-top: 50px; padding-bottom: 50px;">
    <div class="row h-100 align-items-center">
      <!-- Registration Form Section -->
      <div class="col-md-6 registration-form-section" style="background-color: #37525d; padding: 50px;">
        {% for flash_error in app.flashes('verify_email_error') %}
          <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="text-center mb-4" style="color: #e2eee6;">Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
          <div class="form-group">
            {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Email'} }) }}
          </div>

          <div class="form-group">
            {{ form_row(registrationForm.nom_user, { 'label': 'Nom', 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Nom'} }) }}
          </div>

          <div class="form-group">
            {{ form_row(registrationForm.prenom_user, { 'label': 'Prénom', 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Prénom'} }) }}
          </div>

          <div class="form-group">
            {{ form_row(registrationForm.adresse_user, { 'label': 'Adresse', 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Adresse'} }) }}
          </div>

          <div class="form-group">
            {{ form_row(registrationForm.tel_user, { 'label': 'Téléphone', 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Téléphone'} }) }}
          </div>

          <div class="form-group">
            {{ form_row(registrationForm.plainPassword, {
              'label': 'Password',
              'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Password'}
            }) }}
          </div>

          <div class="form-check mb-3">
            {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'I agree to the terms', {'label_attr': {'class': 'form-check-label'}}) }}
          </div>

          <button type="submit" class="btn btn-primary btn-block" style="background-color: #1a6212;">Register</button>
        {{ form_end(registrationForm) }}

        <p class="mt-3 text-center" style="color: #e2eee6;">Already have an account? <a href="{{ path('app_login') }}" style="color: #e2eee6;">Click here to login</a></p>
      </div>

      <!-- Welcome Section with Background Image -->
      <div class="col-md-6 welcome-section" style="background: url('/img.jpg') center/cover; color: #e2eee6; padding: 50px; min-height: 78vh;">
      </div>
    </div>
  </div>
{% endblock %}

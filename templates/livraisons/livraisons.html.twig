{% extends 'baseLivreur.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <div class="container mt-5">
        <h1 class="mb-4">Mes Livraisons</h1>

        <table class="table table-bordered" style="border-radius: 10px;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Nb. Produits</th>
                    <th scope="col">Prix Total</th>
                    <th scope="col">Statut</th>
                </tr>
            </thead>
            <tbody>
                {% for liv in livraisons %}
                    <tr>
                        <td></td>
                        <td>{{ liv.commande.panierNbProd }} produits</td>
                        <td>{{ liv.commande.panierPrixTotal }} DT</td>
                        <td>{{ liv.commande.statut }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
